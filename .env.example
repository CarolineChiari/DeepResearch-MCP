# OpenAI Deep Research MCP Server Configuration
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration (Required)
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_ORG_ID=org-your-organization-id
OPENAI_PROJECT_ID=proj_your-project-id

# Rate Limiting & Cost Controls
MAX_REQUESTS_PER_HOUR=10
MAX_DAILY_COST_USD=25.00
MAX_TOKENS_PER_REQUEST=8000
HIGH_ACCURACY_DAILY_LIMIT=8
MEDIUM_ACCURACY_DAILY_LIMIT=15

# Performance Settings
REQUEST_TIMEOUT_SECONDS=600
RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5

# Redis Configuration (for rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Monitoring & Analytics
ENABLE_USAGE_ANALYTICS=true
LOG_LEVEL=info
ENABLE_COST_ALERTS=true
COST_ALERT_THRESHOLD=0.8

# Server Configuration
NODE_ENV=development
MCP_SERVER_NAME=openai-deep-research-mcp-server
MCP_SERVER_VERSION=2.0.0

# Default Research Settings
DEFAULT_ACCURACY_LEVEL=medium
DEFAULT_MAX_TOKENS=4000
DEFAULT_TEMPERATURE=0.3
DEFAULT_INCLUDE_SOURCES=true
DEFAULT_RESPONSE_FORMAT=comprehensive
REDIS_TTL_SEARCH=3600
REDIS_TTL_FETCH=86400

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security
ENABLE_CORS=true
ENABLE_HELMET=true
